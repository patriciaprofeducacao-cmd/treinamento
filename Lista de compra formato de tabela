        "Código Python — Tabela com colunas alinhadas lista de compra"
      ],
      "metadata": {
        "id": "Wfz21nIvsjZ4"
      }
    },
    {
      "cell_type": "code",
      "source": [
        "frutas = [\n",
        "    \"Maçã\", \"Banana\", \"Uva\", \"Morango\", \"Laranja\",\n",
        "    \"Abacaxi\", \"Melancia\", \"Manga\", \"Pera\", \"Kiwi\"\n",
        "]\n",
        "\n",
        "comidas = [\n",
        "    \"Arroz\", \"Feijão\", \"Macarrão\", \"Carne\", \"Frango\",\n",
        "    \"Ovos\", \"Pão\", \"Queijo\", \"Manteiga\", \"Batata\"\n",
        "]\n",
        "\n",
        "bebidas = [\n",
        "    \"Água\", \"Suco\", \"Café\", \"Leite\", \"Refrigerante\",\n",
        "    \"Chá\", \"Achocolatado\", \"Água com gás\", \"Energético\", \"Vitamina\"\n",
        "]\n",
        "\n",
        "# Cabeçalho\n",
        "print(\"==============================================================\")\n",
        "print(f\"{'FRUTAS':<20} | {'COMIDAS':<20} | {'BEBIDAS':<20}\")\n",
        "print(\"==============================================================\")\n",
        "\n",
        "# Criar tabela linha por linha\n",
        "for f, c, b in zip(frutas, comidas, bebidas):\n",
        "    print(f\"{f:<20} | {c:<20} | {b:<20}\")\n",
        "\n",
        "print(\"==============================================================\")\n",
        "print(\"Total de itens:\", len(frutas) + len(comidas) + len(bebidas))\n",
        "print(\"==============================================================\")\n"
      ],
      "metadata": {
        "colab": {
          "base_uri": "https://localhost:8080/"
