        "# Lista organizada por categorias\n",
        "\n",
        "frutas = [\n",
        "    \"Maçã\", \"Banana\", \"Uva\", \"Morango\", \"Laranja\",\n",
        "    \"Abacaxi\", \"Melancia\", \"Manga\", \"Pera\", \"Kiwi\"\n",
        "]\n",
        "\n",
        "comidas = [\n",
        "    \"Arroz\", \"Feijão\", \"Macarrão\", \"Carne\", \"Frango\",\n",
        "    \"Ovos\", \"Pão\", \"Queijo\", \"Manteiga\", \"Batata\"\n",
        "]\n",
        "\n",
        "bebidas = [\n",
        "    \"Água\", \"Suco\", \"Café\", \"Leite\", \"Refrigerante\",\n",
        "    \"Chá\", \"Achocolatado\", \"Água com gás\", \"Energético\", \"Vitamina\"\n",
        "]\n",
        "\n",
        "print(\"==============================================\")\n",
        "print(\"               LISTA DE COMPRAS               \")\n",
        "print(\"==============================================\")\n",
        "\n",
        "print(\"\\n>>> FRUTAS:\")\n",
        "print(\"----------------------------------------------\")\n",
        "for item in frutas:\n",
        "    print(f\"- {item}\")\n",
        "\n",
        "print(\"\\n>>> COMIDAS:\")\n",
        "print(\"----------------------------------------------\")\n",
        "for item in comidas:\n",
        "    print(f\"- {item}\")\n",
        "\n",
        "print(\"\\n>>> BEBIDAS:\")\n",
        "print(\"----------------------------------------------\")\n",
        "for item in bebidas:\n",
        "    print(f\"- {item}\")\n",
        "\n",
        "print(\"\\n==============================================\")\n",
        "print(\"Total de itens:\", len(frutas) + len(comidas) + len(bebidas))\n",
        "print(\"==============================================\")\n"
